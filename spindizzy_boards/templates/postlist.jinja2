{% extends "html.jinja2" %}

{% block breadcrumb %}
<ul class="breadcrumb">
  <li><a href="/sdb/">SpinDizzy Boards</a></li>
  <li>{{ board_name }}</li>
</ul>
{% endblock breadcrumb %}

{% block title %} Posts on {{ board_name }} ({{ board }}){% endblock %}
{% block head %}
<link rel="alternate" type="application/atom+xml" title="SpinDizzy {{ board_name }}" href="atom" />
{% endblock head %}

{% block body %}
<ol class="post-list">
{% for post in posts %}
    <li>
        <a href="{{ board }}/{{ post.id }}">{{ post.title }}</a>
        <strong>posted by</strong>
        {{ post.author_name }}
        <strong>at</strong>
        {{ post.humantime }}
    </li> 
{% endfor %}
</ol>
{% endblock %}
